<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Transit.Transit_Cab_Ola">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#B1A6A6"
        android:textAlignment="center"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/ola1"/>
                <!-- TODO: Update blank fragment layout -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OLA"
                    style="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginLeft="160dp"
                    android:textSize="30dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/olapara"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click ont the button below to book your Ola Cab"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    />

                <Button
                    android:id="@+id/ridebutton1"
                    android:layout_width="400dp"
                    android:layout_height="70dp"

                    android:onClick="uber"
                    android:text="Ride With Uber"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Website"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyperlink1"/>


            </LinearLayout>



        </ScrollView>
    </androidx.cardview.widget.CardView>


</FrameLayout>
